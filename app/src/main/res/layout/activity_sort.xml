<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SortActivity">
    <RelativeLayout tools:context="com.example.travelroute.SortActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:id="@+id/question"
                android:padding="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22dp"
                android:text="다음 카테고리중 하나를 선택하세요♥"/>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/bt_1"
                    android:background="@drawable/button_background"
                    android:text="배달"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:id="@+id/bt_2"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_background"
                    android:text="백년가게"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_3"
                    android:background="@drawable/button_background"
                    android:text="수요미식회"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="10dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_4"
                    android:background="@drawable/button_background"
                    android:text="백종원의3대천왕"/>


            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/bt_5"
                    android:background="@drawable/button_background"
                    android:text="생활의달인"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:id="@+id/bt_6"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_background"
                    android:text="TV맛집"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_7"
                    android:background="@drawable/button_background"
                    android:text="한식"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_8"
                    android:background="@drawable/button_background"
                    android:text="중식"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/bt_9"
                    android:background="@drawable/button_background"
                    android:text="일식"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:id="@+id/bt_10"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_background"
                    android:text="카페"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_11"
                    android:background="@drawable/button_background"
                    android:text="술집"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_12"
                    android:background="@drawable/button_background"
                    android:text="고기집"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/bt_13"
                    android:background="@drawable/button_background"
                    android:text="횟집"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:id="@+id/bt_14"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_background"
                    android:text="해산물"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_15"
                    android:background="@drawable/button_background"
                    android:text="밥집"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_16"
                    android:background="@drawable/button_background"
                    android:text="분식"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/bt_17"
                    android:background="@drawable/button_background"
                    android:text="패스트푸드"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:id="@+id/bt_18"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_background"
                    android:text="파스타"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_19"
                    android:background="@drawable/button_background"
                    android:text="뷔페"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_20"
                    android:background="@drawable/button_background"
                    android:text="국물요리"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/bt_21"
                    android:background="@drawable/button_background"
                    android:text="면요리"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:id="@+id/bt_22"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_background"
                    android:text="이탈리안"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_23"
                    android:background="@drawable/button_background"
                    android:text="프렌치"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bt_24"
                    android:background="@drawable/button_background"
                    android:text="아시안"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>